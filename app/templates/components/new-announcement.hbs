{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id="message"}}
      </div>
      <button {{action 'saveAnnouncement'}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'announcementFormShow'}}>Create Announcement</button>
{{/if}}
